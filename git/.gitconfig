[include]
  path = ~/.gitconfig.local
[core]
  editor = vim
  excludesfile = ~/.gitignore.global
[credential]
  helper = cache --timeout=3600
[help]
  autocorrect = 10
[alias]
  b = branch -v
  ##################
  c = commit
  ca = commit -a
  cm = commit -m
  cam = commit -am
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort
  undo-commit = reset --soft HEAD~
  ##################
  check = !git checkout $1 && git l
  ##################
  d = diff
  dc = diff --cached
  ##################
  fix = "!f() { SHA=$(git rev-parse HEAD) && REV=$(git rev-parse $SHA) && git commit --fixup $SHA && git rebase -i --autosquash $REV^; }; f -"
  ##################
  l = log --graph --pretty=format:'%Cred%h%C(cyan)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lp = log --graph --pretty=format:'%Cred%h%C(cyan)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' -p
  ##################
  unstage = reset HEAD --
  ##################
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  ##################
  rh = reset --hard
  ##################
  s = status
  ##################
  rom = !git rebase -i `git merge-base HEAD master`  # interactive rebase onto master
  ##################
  blow-it-up = !git cam 'REMOVED COMMIT' && git reset --hard HEAD~
[pull]
  rebase = preserve
[branch]
  autosetuprebase = always
[remote]
  prune = true
[push]
  default = simple
[merge]
  tool = vimdiff
